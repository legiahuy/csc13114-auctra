# Server
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (Recommended for Supabase/Cloud)
# Get this from your Supabase project settings > Database > Connection string
# Format: postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:vongockhoa123@db.nwhopxevyztpjriltfla.supabase.co:5432/postgres

# Option 2: Use individual variables (for local or custom setup)
# If DATABASE_URL is set, these will be ignored
DB_HOST=localhost
DB_PORT=5432
DB_NAME=online_auction
DB_USER=postgres
DB_PASSWORD=postgres

# SSL Configuration (for cloud databases like Supabase)
# Set to 'true' to enable SSL, 'false' to disable
# If using DATABASE_URL, SSL is enabled by default unless set to 'false'
DB_SSL=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@auction.com

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Auto-bid extension
AUTO_EXTEND_THRESHOLD_MINUTES=5
AUTO_EXTEND_DURATION_MINUTES=10

# Frontend URL
FRONTEND_URL=http://localhost:3001

# New product highlight (minutes)
NEW_PRODUCT_MINUTES=60

