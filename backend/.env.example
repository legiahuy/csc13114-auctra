# Server
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (Recommended for Supabase/Cloud)
# Get this from your Supabase project settings > Database > Connection string
# Format: postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/online_auction

# Option 2: Use individual variables (for local or custom setup)
# If DATABASE_URL is set, these will be ignored
DB_HOST=localhost
DB_PORT=5432
DB_NAME=online_auction
DB_USER=postgres
DB_PASSWORD=postgres

# SSL Configuration (for cloud databases like Supabase)
# Set to 'true' to enable SSL, 'false' to disable
# If using DATABASE_URL, SSL is enabled by default unless set to 'false'
DB_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email
# SendGrid Configuration
# Get your API Key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
EMAIL_FROM=verified_sender@example.com

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Supabase Storage
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_STORAGE_BUCKET=product-images

# Auto-bid extension
AUTO_EXTEND_THRESHOLD_MINUTES=5
AUTO_EXTEND_DURATION_MINUTES=10

# Frontend URL
FRONTEND_URL=http://localhost:5173

#LOKI
LOKI_HOST=http://localhost:3100

# New product highlight (minutes)
NEW_PRODUCT_MINUTES=60

SYNC_DB=true

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
